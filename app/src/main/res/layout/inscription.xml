<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="Valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSignUp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPasswordConfirm"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            android:layout_marginEnd="162dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Nom"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/TextViewTitreInscription"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" app:layout_constraintHorizontal_bias="0.508"
            android:hint="Mot de passe"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPasswordConfirm"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Confirmation du mot de passe" app:layout_constraintHorizontal_bias="0.521"/>
    <EditText
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Email" app:layout_constraintHorizontal_bias="0.514" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextName"/>
    <TextView
            android:text="Inscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/TextViewTitreInscription"
            android:textStyle="bold" android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="58dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="157dp"
            android:layout_marginEnd="157dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>