<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
        android:id="@+id/bt_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="1dp" android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp" android:layout_marginBottom="1dp"
        android:text="Pass to send mail" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonGoConnexion"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_pass" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="160dp" android:layout_marginEnd="160dp"
            app:layout_constraintEnd_toEndOf="parent" android:clickable="true"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonGoInscription"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonGoConnexion" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="154dp" android:layout_marginEnd="169dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
